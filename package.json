{
  "name": "css-through-html",
  "displayName": "CSS Through HTML",
  "description": "La extensi√≥n **CSS Through HTML** para Visual Studio Code simplifica el proceso de crear estilos CSS a partir de clases e IDs definidos en archivos HTML",
  "version": "0.0.3",
  "publisher": "JostyTafur",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "icon.png",
  "repository": "https://github.com/JostyTafur/html-to-css",
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:javascript",
    "onLanguage:javascriptreact",
    "onLanguage:typescript",
    "onLanguage:typescriptreact"
  ],
  "galleryBanner": {
    "color": "#007ACC",
    "theme": "dark"
  },
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "css-through-html.createCSS",
        "title": "Include on CSS"
      },
      {
        "command": "css-through-html.createAllCSS",
        "title": "Include All on CSS"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == 'html' || editorLangId == 'javascript' || editorLangId == 'javascriptreact' || editorLangId == 'typescript' || editorLangId == 'typescriptreact'",
          "command": "css-through-html.createCSS",
          "group": "navigation"
        },
        {
          "when": "editorLangId == 'html' || editorLangId == 'javascript' || editorLangId == 'javascriptreact' || editorLangId == 'typescript' || editorLangId == 'typescriptreact'",
          "command": "css-through-html.createAllCSS",
          "group": "navigation"
        }
      ]
    }
  },
  "languages": [
    {
      "id": "html",
      "extensions": [
        ".html"
      ],
      "aliases": [
        "HTML",
        "xml"
      ]
    },
    {
      "id": "javascript",
      "extensions": [
        ".js"
      ],
      "aliases": [
        "JavaScript",
        "javascript"
      ]
    },
    {
      "id": "javascriptreact",
      "extensions": [
        ".jsx"
      ],
      "aliases": [
        "JavaScript React",
        "javascriptreact"
      ]
    },
    {
      "id": "typescript",
      "extensions": [
        ".ts"
      ],
      "aliases": [
        "TypeScript",
        "typescript"
      ]
    },
    {
      "id": "typescriptreact",
      "extensions": [
        ".tsx"
      ],
      "aliases": [
        "TypeScript React",
        "typescriptreact"
      ]
    }
  ],
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
